{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/layouts/*": ["app/components/layouts/*"],
      "@/components/*": ["app/components/*"],
      "@/widgets/*": ["app/components/widgets/*"],
      "@/redux/*": ["app/redux/*"],
      "@/types/*": ["app/types/*"],
      "@/pages/*": ["pages/*"],
      "@/appIcons/*": ["app/assets/icons/*"],
      "@/appImages/*": ["app/assets/images/*"],
      "@/constants/*": ["app/constants.ts"],
      "@/hooks/*": ["app/hooks/*"],
      "@/styles/*": ["styles/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
